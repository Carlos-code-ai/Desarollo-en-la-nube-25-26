{
  "rules": {
    "admins": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('admins/' + auth.uid).val() === true"
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null && (root.child('admins/' + auth.uid).val() === true || auth.uid === $uid)",
        ".write": "auth.uid === $uid || root.child('admins/' + auth.uid).val() === true",
        "favorites": {
          ".read": "auth != null && (auth.uid === $uid || root.child('admins/' + auth.uid).val() === true)",
          ".write": "auth != null && auth.uid === $uid"
        },
        "role": {
          ".read": "auth != null"
        }
      }
    },
    "trajes": {
      ".read": true,
      ".indexOn": ["ownerId", "size", "price", "state", "eventType"],
      "$suitId": {
        ".write": "auth != null && (newData.child('ownerId').val() === auth.uid || !data.exists() || root.child('admins/' + auth.uid).val() === true)",
        ".validate": "newData.hasChildren(['name', 'size', 'price', 'description', 'imageUrl', 'ownerId', 'ownerName', 'ownerPhotoURL', 'state', 'eventType'])"
      }
    },
    "bookings": {
      ".read": "auth != null",
      ".indexOn": ["suitId", "ownerId", "renterId"],
      "$bookingId": {
        ".read": "auth != null && (data.child('ownerId').val() === auth.uid || data.child('renterId').val() === auth.uid)",
        ".write": "auth != null && (newData.child('renterId').val() === auth.uid || newData.child('ownerId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['suitId', 'suitName', 'suitImageUrl', 'ownerId', 'renterId', 'renterName', 'renterPhotoURL', 'startDate', 'endDate', 'totalPrice', 'status', 'createdAt'])"
      }
    },
    "chats": {
      ".read": "auth != null",
      ".indexOn": ["suitId", "timestamp", "memberKey_suitId"],
      "$chatId": {
        ".read": "data.child('members').child(auth.uid).exists()",
        ".write": "auth != null && (newData.child('members').child(auth.uid).exists() || !data.exists())",
        ".validate": "newData.hasChildren(['id', 'suitId', 'lastMessage', 'timestamp', 'members', 'participantInfo'])"
      }
    },
    "messages": {
      "$chatId": {
        ".read": "auth != null && root.child('chats/' + $chatId + '/members/' + auth.uid).exists()",
        ".write": "auth != null && root.child('chats/' + $chatId + '/members/' + auth.uid).exists()",
        ".indexOn": "timestamp"
      }
    },
    "reports": {
      ".read": "root.child('admins/' + auth.uid).val() === true",
      ".indexOn": ["status"],
      "$reportId": {
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['reportedBy', 'reportedItemId', 'reason', 'status', 'createdAt'])"
      }
    }
  }
}