{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "trajes": {
      ".read": "auth != null",
      ".indexOn": ["ownerId"],
      "$suitId": {
        ".write": "auth != null && (newData.child('ownerId').val() === auth.uid || !data.exists())",
        ".validate": "newData.hasChildren(['name', 'size', 'price', 'description', 'imageUrl', 'ownerId', 'ownerName', 'ownerPhotoURL'])"
      }
    },
    "bookings": {
      ".read": "auth != null && (data.child('ownerId').val() === auth.uid || data.child('renterId').val() === auth.uid)",
      ".indexOn": ["suitId", "renterId", "ownerId"], // ÍNDICES CORRECTOS
      "$bookingId": {
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['suitId', 'suitName', 'suitImageUrl', 'ownerId', 'renterId', 'renterName', 'renterPhotoURL', 'startDate', 'endDate', 'totalPrice', 'status', 'createdAt'])"
      }
    },
    "chats": {
       // La consulta por suitId para ver si existe un chat
      ".indexOn": ["suitId", "timestamp"],
      "$chatId": {
        // Solo los miembros del chat pueden leer o escribir
        ".read": "auth != null && data.child('members').child(auth.uid).exists()",
        ".write": "auth != null && data.child('members').child(auth.uid).exists()",
        ".validate": "newData.hasChildren(['id', 'suitId', 'lastMessage', 'timestamp', 'members', 'participantInfo'])",
        "members": {
            // Índice para permitir la consulta principal de chats del usuario
           ".indexOn": ".value"
        }
      }
    },
    "messages": {
      "$chatId": {
        ".read": "auth != null && root.child('chats/' + $chatId + '/members/' + auth.uid).exists()",
        ".write": "auth != null && root.child('chats/' + $chatId + '/members/' + auth.uid).exists()",
        ".indexOn": "timestamp"
      }
    },
    "favorites": {
        "$userId": {
            ".read": "auth != null && auth.uid === $userId",
            ".write": "auth != null && auth.uid === $userId"
        }
    }
  }
}
